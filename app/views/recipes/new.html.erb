<%= form_for @recipe do |f| %>
    <%= f.label "Recipe title:" %>
    <%= f.text_field :title %><br />

    <%= f.fields_for :ingredients do |nest| %>
        <%= nest.label :name %>
        <%= nest.text_field :name %>

        <%= nest.label :quantity %>
        <%= nest.text_field :quantity %><br>
    <% end %>

    <%= f.submit %>
<% end %>